<div class="modal">
  <label for="modal-1">
    <div class="modal-trigger">
      <div class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored">
        <i class="material-icons">add</i>
      </div>
    </div>
  </label>
  <input class="modal-state" id="modal-1" type="checkbox" />
  <div class="modal-fade-screen">
    <div class="modal-inner">
      <div class="modal-close" for="modal-1"></div>
        <h1>Make a House Commandment</h1>
      <p class="modal-content">
        <div id="new-commandment">
          <%= form_for([current_user.house, @commandment], remote:true) do |f| %>

            <div id="commandment-form-errors">
              <%= render "commandment_errors" %>
            </div>
            <br>

            <div class="field">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <%= f.label :title, :class => "mdl-textfield__label" %>
                <%= f.text_field :title, :class => "mdl-textfield__input" %>
              </div>
            </div>

            <div class="field">
              <div class="mdl-textfield mdl-js-textfield">
                <%= f.label :description, :class => "mdl-textfield__label" %>
                <%= f.text_area :description, :class => "mdl-textfield__input" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Declare Your Decree", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            </div>

          <% end %>
        </div>
    </p>
    </div>
  </div>
</div>