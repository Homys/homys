<h1> Commandments </h1>

<div class = "description">
	<p> Commandments go here </p>
</div>

<div class = "container">
	<% @commandments.each do |commandment| %>
		Commandment: <%= commandment.title %> <br>
		Description: <%= commandment.description %> <br>
		<%= link_to("Delete", commandment_path(commandment), method: :delete) if commandment.owner_id = current_user.id %><br> <br>
	<% end %>
</div>


<div class = "add_button">
	<%= link_to new_commandment_path do %>
		<button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored">
		  <i class="material-icons">add</i>
		</button>
	<% end %>
</div>