<h1> Commandments </h1>

<div class="description">
  <p> Commandments go here </p>
</div>

<div id="commandment-list">
  <%= render "commandment_list" %>
</div>



<h5>Add Commandment</h5>
<div id="new-commandment">
  <%= form_for([current_user.house, @commandment], remote:true) do |f| %>

    <div id="commandment-form-errors">
      <%= render "commandment_errors" %>
    </div>
    <br>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</div>