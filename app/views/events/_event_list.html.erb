<div class="calendar mdl-card mdl-shadow--2dp">
<div class="calendar-container">

      <%= month_calendar(events: @events, attribute: 'date') do |date, events| %>
        <% if Date.today == date %>
          <span id="today_number"><%= date.day %></span>
        <% else %>
          <%= date.day %>
        <% end %>

      <% events.each do |event| %>
        <div>
          <%= event.date.strftime("%l:%M %p ") %>
          <%= event.name %>
          <%= link_to "X", house_event_path(@house, event), method: :delete, :class => "calendar-delete", remote: true %>


        </div>
      <% end %>

      <% end %>


</div>
</div>
