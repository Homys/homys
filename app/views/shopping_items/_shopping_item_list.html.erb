<% @shopping_items.each do |shopping_item| %>
  <div class="demo-card-wide mdl-card mdl-shadow--2dp">

    <div class="mdl-card__supporting-text">
      <div class="title">
        <%= shopping_item.name %><br>
      </div>


      <div class="importance">
        <%= shopping_item.importance %> <br>
      </div>

    <% if shopping_item.user_id == nil %>

      <%= link_to "I've got it", house_shopping_item_path(@house, shopping_item), method: :patch %>
    
    <% else %>
      Assigned to <%= shopping_item.user.full_name %> <br>
      <%= link_to "Bought it", house_shopping_item_path(current_user.house, shopping_item), method: :delete %>

    <% end %> <br>

    <%= link_to("Delete", house_shopping_item_path(current_user.house, shopping_item), method: :delete) if shopping_item.owner_id == current_user.id %> <br> <br>

    </div>
  </div>
<% end %>

