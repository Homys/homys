<div class="modal">
  <label for="modal-1">
    <span class="modal-trigger">
      <span class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored">
        <i class="material-icons">add</i>
      </span>
    </span>
  </label>
  <input class="modal-state" id="modal-1" type="checkbox" />
  <div class="modal-fade-screen">
    <div class="modal-inner">
      <div class="modal-close" for="modal-1"></div>
        <h4>Add a New Loot List Item</h4>
      <p class="modal-content">
        <div id="new-shopping-item">
          <%= form_for([current_user.house, @shopping_item], remote: true) do |f| %>

            <div id="shopping-item-errors">
              <%= render "shopping_item_errors" %>
            </div>

            <div class="field">
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <%= f.label :name, :class => "mdl-textfield__label" %>
                  <%= f.text_field :name, :class => "mdl-textfield__input" %>
              </div>
            </div>


            <div class="field">
              <%= f.label :importance, "", :class => "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" do %>
                <%= f.check_box :importance, :class => "mdl-checkbox__input" %>
                <span class="mdl-checkbox__label">Need ASAP</span>
              <%end%>
            </div>
            <br>

            <div class="actions">
              <%= f.submit "Add to Loot List", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            </div>
          <% end %>
        </div>
      </p>
    </div>
  </div>
</div>