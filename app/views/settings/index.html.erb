<h1>Settings</h1>

<% unless @housemates.empty? %>
  <h5>Homys Contact Information</h5>
  <% @housemates.each do |housemate| %>
    <% if current_user != housemate %>
      <%= housemate.full_name %><br>
      <%= housemate.email %><br>
      <%= housemate.phone_num %><br><br>
      <% end %>
  <% end %>
<% end %>


<h5>Edit Profile</h5>
<%= link_to "Edit your account", edit_user_registration_path %><br><br>


<h5>Add Homy</h5>
<% if flash[:alert] %>
  <%= form_tag house_invite_housemate_path(current_user.house_id), method: :patch do %>

    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="actions">
      <%= submit_tag "Invite Homy" %>
    </div>
  <%end%>
<% else %>
  <%= form_tag house_add_housemate_path(current_user.house_id), method: :patch do %>

    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="actions">
      <%= submit_tag "Add Homy" %>
    </div>
  <% end %>
<% end %><br><br>


<h5> Validate Your Phone Number </h5>

<%= link_to "Validate Now", new_phone_number_path %>



<h5>Logout</h5>
<%= link_to "Logout", destroy_user_session_path, method: :delete %><br><br>

<% if @house.users.size != 1 %>
  <h5>Leave House</h5>
  <%= link_to "I'm moving on", house_path("user"), method: :delete %><br><br>
<%end%>

<h5>Destroy House</h5>
<%= link_to "Demolition time", house_path(current_user.house), method: :delete %>
