<h1>Settings</h1>



<% unless @housemates.empty? %>
  <h5>Homys Contact Information</h5>
  <% @housemates.each do |housemate| %>
    <% if current_user != housemate %>
      <div class="custom mdl-card mdl-shadow--2dp mdl-grid">
        <div class="mdl-card__supporting-text mdl-cell mdl-cell--8-col">

          <div class="name-title">
            <%= housemate.full_name %><br><br>
          </div>
          <i class="material-icons">email</i><%= housemate.email %><br><br>
          <i class="material-icons">smartphone</i><%= housemate.phone_num %>
        </div>

        <div class="mdl-cell mdl-cell--4-col">
          <div class="card">
            <%= image_tag housemate.avatar, :class => 'avatar' %>
          </div>
        </div>

      </div>
    <% end %>
  <% end %>
<% end %>

<h5>Add Homy</h5>
<div class="custom mdl-card mdl-shadow--2dp">
  <div class="mdl-card__supporting-text">
    <% if flash[:alert] %>
      <%= form_tag house_invite_housemate_path(current_user.house_id), method: :patch do %>


      <div class="field">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= label_tag :email, "Email", :class => "mdl-textfield__label" %>
          <%= email_field_tag :email, params[:email], :class => "mdl-textfield__input" %>
        </div>
      </div>

        <div class="actions">
          <%= submit_tag "Invite Homy" %>
        </div>
      <%end%>

    <% else %>
      <%= form_tag house_add_housemate_path(current_user.house_id), method: :patch do %>

        <div class="field">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= label_tag :email, "Email", :class => "mdl-textfield__label" %>
              <%= email_field_tag :email, params[:email], :class => "mdl-textfield__input" %>
            </div>
        </div>

      <div class="actions">
        <%= submit_tag "Add Homy", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"%>
      </div>
    <% end %>
  <% end %>

  </div>
</div>


<h5>Other Options</h5>
<div class="custom mdl-card mdl-shadow--2dp">
  <div class="mdl-card__supporting-text">
    <% if @house.users.size != 1 %>
      <%= button_to "Leave House", house_path("user"), :id => "open-contacts-dialog-btn",
          :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", method: :delete %>
          <br>
    <%end%>
    <%= button_to "Destroy House", house_path(current_user.house), :id => "open-contacts-dialog-btn",
      :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent", method: :delete %>
  </div>
</div>


