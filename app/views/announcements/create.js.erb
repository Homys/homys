<% @announcements = @house.announcements.order('importance DESC', 'created_at DESC').page(params[:page]) %>

<% if @announcement.errors.present? %>
  $("#announcement-form-errors").html("<%= j(render "announcement_errors") %>");
<% else %>
  $("#announcement-form-errors").html("");
  $("#announcement-list").html(("<%= j(render "announcement_list") %>"));
  $("#new-announcement")[0].reset();
<% end %>