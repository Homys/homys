<% @announcements.each do |announcement| %>
	<div class="demo-card-wide mdl-card mdl-shadow--2dp list-card">
      	<div class="mdl-card__supporting-text">

    		<img src="http://www.panamericanworld.com/sites/default/files/jose-bautista-beard-4.jpg" class="image"/>

        	<div class="title">
        		<%= announcement.title %> <br>
        	</div>

    		<div class="description">
        		<%= announcement.description %> <br>
        	</div>

        	<div class="importance">
    			<%= announcement.importance %>
    		</div>

        	<%= link_to("Delete", house_announcement_path(current_user.house_id, announcement), method: :delete) if announcement.owner_id = current_user.id %>
        </div>
    </div>
<% end %>


