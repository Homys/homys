
<% @announcements.each do |announcement| %>

<div class="custom mdl-card mdl-shadow--2dp mdl-grid">
    <div class="mdl-card__supporting-text mdl-cell mdl-cell--8-col mdl-cell--3-col-phone">
        <% if announcement.importance == "1" %>
            <i class="material-icons">error</i> <br> <%= announcement.description %>
        <% else %>
            <%= announcement.description %>
        <% end %>
    </div>

    <div class="mdl-cell mdl-cell--4-col mdl-cell--1-col-phone">
        <div class="card">
            <div class="delete-button">
                <%= link_to('<i class="material-icons">close</i>'.html_safe, house_announcement_path(current_user.house_id, announcement), method: :delete) %>
            </div>
            <%= image_tag announcement.owner.avatar, :class => 'avatar' %>
            <div class="clear center-horizontal"><%= announcement.owner.first_name %></div>
        </div>
    </div>
</div>

<% end %>


