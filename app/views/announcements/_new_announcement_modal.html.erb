<div class="modal">
  <label for="modal-1">
    <span class="modal-trigger">
      <span class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored">
        <i class="material-icons">add</i>
      </span>
    </span>
  </label>
  <input class="modal-state" id="modal-1" type="checkbox" />
  <div class="modal-fade-screen">
    <div class="modal-inner">
      <div class="modal-close" for="modal-1"></div>
      <h1>Make an Announcement</h1>
      <p class="modal-content">
        <div id="new-annoucement">
          <%= form_for([current_user.house, @announcement], remote: true) do |f| %>
            <div id="announcement-form-errors">
              <%= render "announcement_errors" %>
            </div>
            <br>

            <div class="field">
              <div class="mdl-textfield mdl-js-textfield">
                <%= f.label :description, :class => "mdl-textfield__label" %>
                <%= f.text_area :description, :class => "mdl-textfield__input" %>
              </div>
            </div>

            <div class="field">
            <%= f.label :importance, "", :class => "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" do %>
                <%= f.check_box :importance, :class => "mdl-checkbox__input" %>
                <span class="mdl-checkbox__label">Important</span>
              <%end%>
            </div>
            <br>

            <div class="actions">
              <%= f.submit "Make your declaration", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            </div>
          <% end %>
        </div>
    </p>
    </div>
  </div>
</div>