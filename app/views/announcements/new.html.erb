<h1>Create new announcement</h1>

<%= form_for @announcement do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :importance, "Important" %><br />
    <%= f.check_box :importance %>
  </div>


  <div class="actions">
  	<%= f.submit %>
  </div>

<% end %>