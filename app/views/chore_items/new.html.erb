<h1>Create new chore item</h1>

<%= form_for @chore_item do |f| %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="actions">
  	<%= f.submit %>
  </div>

<% end %>