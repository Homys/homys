<h1> House Quests </h1>

<p> House Quests are weekly chores around the house. </p>

<p> <%= link_to "Randomize chores", house_chore_assigner_path(current_user.house_id), method: :patch %> </p>

<div id="chore-list">
  <%= render "chore_item_list" %>
</div>


<h5>Create new chore item</h5>

<div id="new-chore">
  <%= form_for([current_user.house, @chore_item], remote: true) do |f| %>

    <div id="chore-form-errors">
      <%= render "chore_item_errors" %>
    </div>
    <br>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</div>

