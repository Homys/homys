<header class="mdl-layout__header">
  <div class="mdl-layout__header-row login">
      <div class="logo_main">
          <%= image_tag("homy-sml")%>
          <%= link_to "Homys", root_path %>
      </div>
    <div class="mdl-layout-spacer"></div>
  </div>
</header>

 <div class="mdl-grid">
  <div class="mdl-cell mdl-cell--3-col"></div>
    <div class="mdl-cell mdl-cell--6-col">
      <% if flash[:notice] %>
        <p class="flash-notice"><%= notice %></p>
      <% end %>
      <% if flash[:alert] %>
        <p class="flash-alert"><%= alert %></p>
      <% end %>

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
   <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :email, :class => "mdl-textfield__label" %><br />
    <%= f.email_field :email, :class => "mdl-textfield__input" %>
  </div>
  </div>


  <div class="actions">
    <%= f.submit "RESET PASSWORD", :class => "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"  %>
  </div>
  <br> 

<% end %>

<%= render "devise/shared/links" %>


    
  </div>
<div class="mdl-cell mdl-cell--3-col"></div>
